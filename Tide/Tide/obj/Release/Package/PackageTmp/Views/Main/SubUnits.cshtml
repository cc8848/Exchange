@{
    Layout = null;
   @model  IEnumerable<Tide.Models.SubUnit>
}

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/MainCss.css" rel="stylesheet" />
    <link rel="stylesheet" href="http://apps.bdimg.com/libs/jquerymobile/1.4.5/jquery.mobile-1.4.5.min.css">
    <script src="http://apps.bdimg.com/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="http://apps.bdimg.com/libs/jquerymobile/1.4.5/jquery.mobile-1.4.5.min.js"></script>
    @*<script src="~/Scripts/jquery-1.8.2.min.js"></script>*@
    <script src="~/Scripts/MainJS/echarts.min.js"></script>
    <script src="~/Scripts/MainJS/china.js"></script>
    <script src="~/Scripts/MainJS/Index.js"></script>
    <script src="~/Scripts/MainJS/Search.js"></script>
    <title>子单位</title>
</head>
<body>
    <div data-role="page" id="pageone">
        <div data-role="header" data-position="fixed" style="position: fixed;">
            <table>
                <tr>
                    <td><img width="30" height="30" src="~/Images/logo.png" /></td>
                    <td class="title"><span>汇盈财经</span></td>
                </tr>
            </table>
        </div>
        <div data-role="main" class="ui-content">
            <div class="subunit">
                <div>
                    <p>&nbsp;&nbsp;@ViewBag.Info.Name</p>
                    <ul>
                        <li>成立时间：@ViewBag.Info.FoundingTime</li>
                        <li>主要交易品种：@ViewBag.Info.MajorTradings</li>
                        <li>地址：@ViewBag.Info.Address</li>
                    </ul>
                </div>
                <p>&nbsp;&nbsp;下属子单位：</p>
                <table>
                    <thead>
                        <tr>
                            <th>单位名称</th>
                            <th>单位地址</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var Item in @Model)
                        {
                            <tr>
                                <td>@Item.UnitName</td>
                                <td>@Item.Address</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div data-role="footer" data-position="fixed" style="position: fixed;">
            <div data-role="navbar">
                <ul>
                    <li>@Html.ActionLink("地图", "Index") </li>
                    <li>@Html.ActionLink("搜交易所", "SearchList")</li>
                    <li>@Html.ActionLink("搜子单位", "SearchUnit")</li>
                </ul>
            </div>
        </div>

    </div>
</body>
</html>
